name: Deploy to UAT
on:
  workflow_dispatch:  # Manual trigger
  push:
    branches:
      - uat  # Auto-trigger if pushing to 'uat' branch

env:
  NODE_ENV: uat  # Uses UAT-specific .env/config

jobs:
  deploy:
    runs-on: ubuntu-latest
    steps:
      # 1. Checkout code
      - uses: actions/checkout@v4

      # 2. Configure AWS credentials (UAT environment)
      - uses: aws-actions/configure-aws-credentials@v4
        with:
          aws-access-key-id: ${{ secrets.UAT_AWS_ACCESS_KEY_ID }}
          aws-secret-access-key: ${{ secrets.UAT_AWS_SECRET_ACCESS_KEY }}
          aws-region: ${{ vars.AWS_REGION }}

      # 3. Install dependencies (optional, if needed for deployment scripts)
      - name: Install dependencies
        run: |
          sudo apt-get update
          sudo apt-get install -y jq  # For parsing JSON in scripts

      # 4. Deploy to UAT EC2 instance via SSH
      - name: Deploy to UAT EC2
        uses: appleboy/ssh-action@v1
        with:
          host: ${{ vars.UAT_EC2_IP }}
          username: ubuntu
          key: ${{ secrets.UAT_SSH_PRIVATE_KEY }}
          script: |
            cd /home/ubuntu/user-microservice
            git pull origin uat
            npm install --production
            pm2 restart server.js --update-env  # Reload environment variables
            echo "Deployed to UAT!"

      # 5. Smoke test (optional)
      - name: Run smoke test
        run: |
          RESPONSE=$(curl -s -o /dev/null -w "%{http_code}" http://${{ vars.UAT_EC2_IP }}:3000/api/health)
          if [ "$RESPONSE" != "200" ]; then
            echo "Smoke test failed! HTTP $RESPONSE"
            exit 1
          fi
